{% extends '../layouts/default.twig' %}

{% block htmlclass %}{{ parent() }} page-home-html{% endblock %}
{% block bodyclass %}{{ parent() }} page-home{% endblock %}

{% block title %}Home - {{ parent() }}{% endblock %}

{% if attribute(ouragan, 'include_once_css') is defined %}
    {{ ouragan.include_once_css({
        src: 'public/assets/css/pages/home.css',
        priority: 5,
        cache: random,
        media: 'not print',
        target: 'beforebody',
        inline: false
    }) }}
{% endif %}

{% if attribute(ouragan, 'include_once_js') is defined %}
    {{ ouragan.include_once_js({
        src: 'public/assets/js/pages/home.js',
        priority: 5,
        cache: random,
        target: 'afterbody',
        inline: false
    }) }}
{% endif %}

{% block pre_content %}
    <!--
    Include this snippet only on the frontpage.
    Testing tool: https://search.google.com/structured-data/testing-tool
    Documentation: https://developers.google.com/search/docs/data-types/sitelinks-searchbox
    -->
    <script type='application/ld+json'>
        {
            "@context": "https://schema.org",
            "@type": "WebSite",
            "@id": "http://my-website-url.com/#website",
            "url": "http://my-website-url.com/",
            "name": "Name of the website",
            "potentialAction": {
                "@type": "SearchAction",
                "target": "http://my-website-url.com/?s={search_term_string}",
                "query-input": "required name=search_term_string"
            }
        }

    </script>
{% endblock %}

{% block content %}
    {% include '@blocks/banner.twig' %}
{% endblock %}
